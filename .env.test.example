# Test Environment Variables for Ticket Shameless
# ------------------------------------------------
# Copy this file to .env.test and fill in your test database credentials

# IMPORTANT: Use a TEST database, not production!
# These tests will create and delete events and orders

# Supabase credentials (required for ticket tests)
NEXT_PUBLIC_SUPABASE_URL=https://your-test-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe credentials (optional)
STRIPE_SECRET_KEY=your-test-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-test-webhook-secret

# Base URL for testing
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Test mode flags
DEBUG_TEST_ERRORS=false
